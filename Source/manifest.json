{
  "name": "DojoWidgetWeaver",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Dojo Widgets Generator",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup":"main.html"
  },

  "permissions": [
    "http://www.google.co.in/"
  ],
  "content_scripts": [
    {
      "matches":["http://www.google.co.in/*"],
      "js":["main.js","jquery-1.8.3.min.js"]
    }
  ]
}

